{% extends "layouts/base.twig" %}

{% block content %}
	{% for post in posts %}
		{% include ['partials/tease-'~post.post_type~'.twig', 'partials/tease.twig'] %}
	{% endfor %}

	{% set pagination_opts = posts.pagination({show_all: false, mid_size: 2, end_size: 1}) %}
	{% include 'partials/pagination.twig' with { pagination: pagination_opts } %}
{% endblock %}
