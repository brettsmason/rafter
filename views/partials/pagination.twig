{% if posts.pagination.pages is not empty %}
	<nav class="site-pagination">
		<ul class="pagination">
			{% if pagination.pages | first and pagination.pages | first.current != true %}
				<li class="pagination__item pagination__item--first">
					<a class="pagination__link" href="{{ pagination.pages | first.link }}">{{ _e('First', 'rafter') }}</a>
				</li>
			{% else %}
				<li class="pagination__item pagination__item--first">
					<a class="pagination__link">{{ _e('First', 'rafter') }}</a>
				</li>
			{% endif %}

			{% if pagination.prev %}
				<li class="pagination__item pagination__item--previous">
					<a class="pagination__link" href="{{ pagination.prev.link }}">{{ _e('Previous', 'rafter') }}</a>
				</li>
			{% else %}
				<li class="pagination__item pagination__item--previous pagination__item--disabled">
					<a class="pagination__link">{{ _e('Previous', 'rafter') }}</a>
				</li>
			{% endif %}

			{% for page in pagination.pages %}
				{% if page.link %}
					<li class="pagination__item">
						<a class="pagination__link" href="{{ page.link }}">{{ page.title }}</a>
					</li>
				{% elseif page.class == 'dots' %}
					<li class="pagination-dots">
						<a class="pagination__link">{{ page.title }}</a>
					</li>
				{% else %}
					<li class="pagination__item pagination__item--current">
						<a class="pagination__link">{{ page.title }}</a>
					</li>
				{% endif %}
			{% endfor %}

			{% if pagination.next %}
				<li class="pagination__item pagination__item--next">
					<a class="pagination__link" href="{{ pagination.next.link }}">{{ _e('Next', 'rafter') }}</a>
				</li>
			{% else %}
				<li class="pagination__item pagination__item--next pagination__item--disabled">
					<a class="pagination__link">{{ _e('Next', 'rafter') }}</a>
				</li>
			{% endif %}

			{% if pagination.pages | last and pagination.pages | last.current != true %}
				<li class="pagination__item pagination__item--last">
					<a class="pagination__link" href="{{ pagination.pages | last.link }}">{{ _e('Last', 'rafter') }}</a>
				</li>
			{% else %}
				<li class="pagination__item pagination__item--last pagination__item--disabled">
					<a class="pagination__link">{{ _e('Last', 'rafter') }}</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
